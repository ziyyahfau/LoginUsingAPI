<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="noosc.project.otrs.login">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".animation.Spalshscreen"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".core.login.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".core.main.MainActivity"/>
        <activity android:name=".core.profile.ProfileActivity"/>
        <activity android:name=".core.utama_dashboard.DashboardActivity"/>
        <activity android:name=".core.utama_companyTicket.CompanyTicketActivity"/>
        <activity android:name=".core.utama_myticket.MyTicketActivity"/>
        <activity android:name=".core.utama_ticket.TicketActivity"/>
        <activity android:name=".core.utama_watchedTicket.WatchedTicketActivity"/>
        <activity android:name=".core.new_ticket.NewTicketActivity"/>
    </application>

</manifest>