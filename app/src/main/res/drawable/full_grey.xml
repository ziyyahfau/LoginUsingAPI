<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"
            >
            <corners
                android:radius="3dp"
                />
            <stroke
                android:color="#e6e6e6"
                android:width="3dp"
                />
            <gradient
                android:angle="0"
                android:startColor="#e6e6e6"
                android:endColor="#e6e6e6"
                android:type="linear"
                />
        </shape>
    </item>
</layer-list>