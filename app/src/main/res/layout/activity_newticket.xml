<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="7dp"
        android:background="#ffffff">

        <LinearLayout
            android:id="@+id/linearType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3dp"
            android:gravity="center">

            <TextView
                android:id="@+id/Type"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type"
                android:gravity="center_horizontal"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/spinnerType"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="36dp"
                android:lines="1"
                android:paddingLeft="4dp"
                android:textSize="12dp"
                android:singleLine="true"
                android:spinnerMode="dropdown"
                android:entries="@array/TypeTicket"
                android:dropDownWidth="fill_parent"
                android:background="@android:drawable/btn_dropdown"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearFrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3dp"
            android:gravity="center">

            <TextView
                android:id="@+id/From"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From"
                android:gravity="center_horizontal"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/spinnerFrom"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="34dp"
                android:paddingLeft="4dp"
                android:textSize="12dp"
                android:entries="@array/FromTicket"
                android:spinnerMode="dropdown"
                android:dropDownWidth="fill_parent"
                android:background="@android:drawable/btn_dropdown"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/To"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To"
                android:inputType="textEmailAddress"
                android:gravity="center_horizontal"
                android:textSize="15dp" />

            <AutoCompleteTextView
                android:id="@+id/editToAutoComplte"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:lines="1"
                android:maxLines="1"
                android:paddingLeft="4dp"
                android:textSize="15dp"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:background="@drawable/line_color"
                android:layout_marginLeft="55dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearCc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/Cc"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cc"
                android:inputType="textEmailAddress"
                android:gravity="center_horizontal"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/editCc"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:textSize="15dp"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"
                android:paddingLeft="4dp"
                android:inputType="textEmailAddress"
                android:background="@drawable/line_color"
                android:layout_marginLeft="53dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearBCc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/BCc"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bcc"
                android:inputType="textEmailAddress"
                android:gravity="center_horizontal"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/editBCc"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:textSize="15dp"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"
                android:paddingLeft="4dp"
                android:inputType="textEmailAddress"
                android:background="@drawable/line_color"
                android:layout_marginLeft="46dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Service"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service"
                android:inputType="textEmailAddress"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/editService"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="19dp"
                android:entries="@array/GakTauIsinya"
                android:spinnerMode="dropdown"
                android:dropDownWidth="fill_parent"
                android:background="@android:drawable/btn_dropdown"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearSLA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/SLA"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SLA"
                android:inputType="textEmailAddress"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/editSLA"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="41dp"
                android:entries="@array/GakTauIsinya"
                android:spinnerMode="dropdown"
                android:dropDownWidth="fill_parent"
                android:background="@android:drawable/btn_dropdown"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearOwner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Owner"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Owner"
                android:inputType="textEmailAddress"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/editOwner"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:lines="1"
                android:textSize="15dp"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:background="@drawable/line_color"
                android:layout_marginLeft="28dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearSign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Sign"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign"
                android:inputType="textEmailAddress"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/editSign"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="39dp"
                android:entries="@array/GakTauIsinya"
                android:spinnerMode="dropdown"
                android:dropDownWidth="fill_parent"
                android:background="@android:drawable/btn_dropdown"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearCrypt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Crypt"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crypt"
                android:inputType="textEmailAddress"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/editCrypt"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="32dp"
                android:entries="@array/GakTauIsinya"
                android:spinnerMode="dropdown"
                android:dropDownWidth="fill_parent"
                android:background="@android:drawable/btn_dropdown"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearSubjek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Subjek"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject"
                android:inputType="textEmailAddress"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/editSubjek"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:textSize="15dp"
                android:paddingLeft="4dp"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:background="@drawable/line_color"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_composEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/line_color">

            <EditText
                android:id="@+id/editComposEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Compose Email"
                android:textSize="15dp"
                android:inputType="textMultiLine"
                android:gravity="top|left"
                android:layout_margin="5dp"
                android:lines="10"
                android:background="@null"
                android:scrollbars="vertical"
                android:maxLines="10"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearSignature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Signature"
                android:textSize="15dp"
                android:gravity="top|left"/>

            <EditText
                android:id="@+id/editSignature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="31dp"
                android:maxLines="10"
                android:layout_marginTop="5dp"
                android:lines="5"
                android:paddingTop="4dp"
                android:paddingLeft="7dp"
                android:textSize="15dp"
                android:inputType="textEmailAddress|textMultiLine"
                android:gravity="top|left"
                android:scrollbars="vertical"
                android:background="@drawable/line_color"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearAttachment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Attachment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Attachment"
                android:textSize="15dp"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/buttonAttachment"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="21dp"
                android:textSize="8dp"
                android:text="Browse"
                android:background="@drawable/grey_button"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearCustomerID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/CustomerID"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer ID"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/editCustomerID"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:textSize="15dp"
                android:paddingLeft="11dp"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"
                android:background="@drawable/line_color"
                android:layout_marginLeft="14dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearTicketState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TicketState"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ticket State"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/spinerTicketState"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:textSize="12dp"
                android:entries="@array/StatusTicket"
                android:spinnerMode="dropdown"
                android:dropDownWidth="fill_parent"
                android:background="@android:drawable/btn_dropdown"
                android:layout_marginLeft="18dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearPendingDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/PendingDate"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending Date"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/editDatePending"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginTop="2dp"
                android:textSize="13dp"
                android:textColor="@color/colorBlack"
                android:hint="2017/08/08"
                android:paddingLeft="7dp"
                android:layout_marginLeft="9dp"
                android:onClick="DatePending"
                android:background="@drawable/full_grey"/>

            <TextView
                android:id="@+id/editTimePending"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginTop="2dp"
                android:hint="14:30"
                android:textSize="12dp"
                android:textColor="@color/colorBlack"
                android:paddingLeft="6dp"
                android:layout_marginLeft="19dp"
                android:onClick="TimePending"
                android:background="@drawable/full_grey"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearPriority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Priority"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Priority"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/spinnerPriority"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:textSize="12dp"
                android:paddingLeft="4dp"
                android:entries="@array/Priority"
                android:spinnerMode="dropdown"
                android:dropDownWidth="fill_parent"
                android:background="@android:drawable/btn_dropdown"
                android:layout_marginLeft="50dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearDueDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/DueDate"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due Date"
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="33dp"/>

            <TextView
                android:id="@+id/editDateNext"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginTop="2dp"
                android:textSize="13dp"
                android:textColor="@color/colorBlack"
                android:hint="2017/08/08"
                android:paddingLeft="5dp"
                android:onClick="DateNext"
                android:background="@drawable/full_grey"/>

            <TextView
                android:id="@+id/editTimeNext"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginTop="2dp"
                android:hint="14:30"
                android:textSize="12dp"
                android:paddingLeft="4dp"
                android:layout_marginLeft="17dp"
                android:onClick="TimeNext"
                android:textColor="@color/colorBlack"
                android:background="@drawable/full_grey"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearTimeUnir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TimeUnit"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Unit"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/spinerTimeUnit"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:textSize="15dp"
                android:paddingLeft="4dp"
                android:background="@drawable/line_color"
                android:layout_marginLeft="36dp" />
        </LinearLayout>


        <Button
            android:id="@+id/buttonSendEmail"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:textSize="13dp"
            android:layout_marginTop="15dp"
            android:text="Send Mail"
            android:background="@drawable/grey_button"/>


    </LinearLayout>

</ScrollView>