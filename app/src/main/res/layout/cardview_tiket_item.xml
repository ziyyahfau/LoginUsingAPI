<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/linear_ticket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/txt_queue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MERLION"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/txt_title"
            android:layout_below="@+id/txt_queue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:maxLength="15"
            android:text="Libur hari raya "
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/no_ticket"
            android:layout_below="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="101010"/>

        <TextView
            android:id="@+id/txt_user"
            android:layout_below="@+id/no_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="siapaaja@noosc.co.id"
            android:maxLength="15"
            android:textColor="@color/colorBlueFlawless"/>

        <View
            android:id="@+id/line"
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="240dp"/>

        <TextView
            android:id="@+id/time_respone_ticket"
            android:layout_toRightOf="@id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="01d 2h"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorNudeDark"/>

        <TextView
            android:id="@+id/txt_status_name"
            android:layout_toRightOf="@id/line"
            android:layout_below="@id/time_respone_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="closed ticket"
            android:textSize="10dp"
            android:textColor="@color/colorGreyDark"/>

    </RelativeLayout>

</LinearLayout>